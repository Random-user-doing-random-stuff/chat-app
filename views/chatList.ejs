<h2>Available Chats</h2>
<ul>
    <% chats.forEach(chat => { %>
        <li><a href="/chat/<%= chat._id %>"><%= chat.name %></a></li>
    <% }) %>
</ul>

<h2>Create a New Chat Room</h2>
<form action="/chat/create" method="POST">
    <input type="text" name="name" placeholder="Chat room name" required />
    <button type="submit">Create</button>
</form>
